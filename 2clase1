    <script>
        // Variables para el juego
        let currentQuestion = 1;
        let score = 0;
        let timeLeft = 90;
        let timer;
        
        // Funciones para las pesta√±as
        function openTab(evt, tabName) {
            const tabcontent = document.getElementsByClassName("tab-pane");
            for (let i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            
            const tablinks = document.getElementsByClassName("tab");
            for (let i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }
        
        // Funci√≥n para practicar conversaci√≥n
        function practiceConversation(oldWord, newWord) {
            alert(`Vas a cambiar "${oldWord}" por "${newWord}" en la conversaci√≥n. ¬°Practica en voz alta!`);
        }
        
        // Funci√≥n para grabar (simulada)
        function startRecording() {
            alert("üé§ Grabaci√≥n iniciada (simulaci√≥n). Habla durante 30 segundos practicando la conversaci√≥n.");
            setTimeout(() => {
                alert("‚èπÔ∏è Grabaci√≥n completada. ¬°Buen trabajo!");
            }, 3000);
        }
        
        // Funci√≥n para el juego de emparejamiento
        function checkMatches() {
            alert("En una implementaci√≥n completa, esto verificar√≠a las coincidencias. ¬°Sigue practicando!");
            document.getElementById("game-feedback").textContent = "¬°Buen trabajo combinando clima y actividades!";
            document.getElementById("game-feedback").className = "feedback positive-feedback";
            document.getElementById("game-feedback").style.display = "block";
        }
        
        // Funci√≥n para la evaluaci√≥n integrada
        function submitIntegrationQuiz() {
            let feedbackText = "<strong>Retroalimentaci√≥n de tu evaluaci√≥n:</strong><br><br>";
            
            // Verificar que todas las respuestas tengan contenido
            const q1 = document.querySelector('textarea[name="q1"]').value.trim();
            const q2 = document.querySelector('input[name="q2"]').value.trim();
            const q3 = document.querySelector('textarea[name="q3"]').value.trim();
            
            if (q1 && q2 && q3) {
                feedbackText += "‚úÖ Todas las preguntas respondidas<br>";
                feedbackText += "‚úÖ Uso adecuado de vocabulario integrado<br>";
                feedbackText += "‚úÖ Estructuras gramaticales apropiadas<br>";
                feedbackText += "<br><strong>¬°Excelente trabajo integrando el conocimiento de ambos m√≥dulos!</strong>";
                
                document.getElementById("integration-result").className = "feedback positive-feedback";
            } else {
                feedbackText += "‚ö†Ô∏è Por favor completa todas las preguntas<br>";
                feedbackText += "üí° Recuerda usar vocabulario de ambos m√≥dulos";
                
                document.getElementById("integration-result").className = "feedback negative-feedback";
            }
            
            document.getElementById("integration-result").innerHTML = feedbackText;
            document.getElementById("integration-result").style.display = "block";
        }
        
        // Funci√≥n para marcar la clase como completada
        function markAsCompleted() {
            document.getElementById("completion-message").style.display = "block";
            localStorage.setItem('modulo2-clase1-completed', 'true');
        }
        
        // Inicializar temporizador de 90 minutos
        function startTimer() {
            clearInterval(timer);
            timeLeft = 90;
            document.getElementById("time").textContent = timeLeft;
            
            timer = setInterval(function() {
                timeLeft--;
                document.getElementById("time").textContent = timeLeft;
                
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    alert("‚è∞ Tiempo completado. ¬°Has terminado las actividades principales!");
                }
            }, 1000);
        }
        
        // Inicializar la p√°gina
        window.onload = function() {
            startTimer();
            if (localStorage.getItem('modulo2-clase1-completed') === 'true') {
                document.getElementById("completion-message").style.display = "block";
            }
        };
    </script>
</body>
</html>
